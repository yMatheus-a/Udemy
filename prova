package prova;

public class ligacoes {

    String hora;
    String data;
    int minutosGastos;
    double pulsos;
    String ligar;

    ligacoes(){
}

ligacoes(String hora, String data, int minutosGastos, Double pulsos, String ligar){
    this.hora = hora;
    this.data = data;
    this.minutosGastos = minutosGastos;
    this.pulsos = pulsos;
    this.ligar = ligar;

}   



}

package prova;

import java.util.Scanner;


public class programa {
    
     public static void main(String[] args) {
        
        ligacoes lig = new ligacoes();
        Scanner sc = new Scanner(System.in);
        usuario usu = new usuario();

        System.out.println("Digite que dia foi feita a ligação: \nExemplo: NN/MM/YY");
        lig.data = sc.nextLine();

        System.out.println("Digite que horas foi feita a ligação: ");
        lig.hora = sc. nextLine();
        



    }
}

package prova;

public class usuario {
    
    String nome;
    int idade;

    usuario(){
    
    }

    usuario(String nome, int idade){
        this.nome = nome;
        this.idade = idade;
    }
}

